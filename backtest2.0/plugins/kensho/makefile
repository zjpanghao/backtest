# Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.


# Where to find user code.

LIB_DIR = ../../../mylib
CORE_DIR = ../../../basecore
USER_DIR = ./../../pub
SO_DIR = ./../../bin/plugins
DEPENDS_DIR = ./../../../depends
DEPENDS_RUN_DIR = ./../../depends

THIRD_PATH = $(LIB_DIR)/public

CUSTOM_THIRD_PATH = $(LIB_DIR)/third_party

LINK_PATHS = -L./ -L/usr/local/libmemcached-1.0.7/lib/  -L/usr/lib64/mysql -L$(CUSTOM_THIRD_PATH)/librdkafka -L/usr/lib64/

# Flags passed to the preprocessor.
CPPFLAGS += -isystem -shared -fPIC -D_DB_POOL_ -D_DEBUG -DUSR_LOG_MSG\
	-D_DIC_POOL_ -D_REENTRANT -D_GNU_SOURCE -DUSR_LOG_ERROR -DUSR_LOG_MSG\
	 -DPROCESS_WORK -DHEAD_SHORT -Wall  -DBACKTEST_TEST

# Flags passed to the C++ compiler.
CXXFLAGS += -g  -Wextra -pthread -shared -fPIC

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
PLUGIN = $(SO_DIR)/kenshosvc/kensho.so
                
INCLUDE_PATHS = -I/usr/local/libmemcached-1.0.7/include \
                                -I$(DEPENDS_DIR)/include\
				-I$(LIB_DIR)/\
				-I$(CORE_DIR)/\
				-I$(THIRD_PATH)\
				-I/usr/local/include\
				-I/usr/include/mysql\
				-I$(USER_DIR)\
				-I$(CUSTOM_THIRD_PATH)/hiredis\
				-I$(CUSTOM_THIRD_PATH)\
				-I$(LIB_DIR)/base\
				-I$(CUSTOM_THIRD_PATH)/librdkafka/src\
                                -I$(LIB_DIR)/third_party/glog/include\
				-I../\
				


# House-keeping build targets.

ALL_HEADERS = $(USER_HEADERS)
all : $(PLUGIN)

clean :
	rm -f $(PLUGIN)  *.o

# Builds gtest.a and gtest_main.a.

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
#GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
#gtest-all.o : $(GTEST_SRCS_)
#	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc

#gtest_main.o : $(GTEST_SRCS_)
#	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc

#gtest.a : gtest-all.o
#	$(AR) $(ARFLAGS) $@ $^

#gtest_main.a : gtest-all.o gtest_main.o
#	$(AR) $(ARFLAGS) $@ $^

# Builds a sample test.  A test should link with either gtest.a or
# gtest_main.a, depending on whether it defines its own main()
# function.


base_config.o : ${USER_DIR}/baseconfig/base_config.cc ${USER_DIR}/baseconfig/base_config.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ${USER_DIR}/baseconfig/base_config.cc $(INCLUDE_PATHS)
kensho_init.o : ./kensho_init.cc ./kensho_init.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_init.cc $(INCLUDE_PATHS)
dtoa.o : $(CUSTOM_THIRD_PATH)/dmg_fp/dtoa.cc 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(CUSTOM_THIRD_PATH)/dmg_fp/dtoa.cc $(INCLUDE_PATHS)
g_fmt.o : $(CUSTOM_THIRD_PATH)/dmg_fp/g_fmt.cc 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(CUSTOM_THIRD_PATH)/dmg_fp/g_fmt.cc $(INCLUDE_PATHS)
radom_in.o : $(THIRD_PATH)/basic/radom_in.cc 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/radom_in.cc $(INCLUDE_PATHS)

kensho_logic.o : ./kensho_logic.cc ./kensho_logic.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_logic.cc $(INCLUDE_PATHS)
	
kensho_factory.o : ./kensho_factory.cc ./kensho_factory.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_factory.cc $(INCLUDE_PATHS)

kensho_kafka.o : ./kensho_kafka.cc ./kensho_kafka.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_kafka.cc $(INCLUDE_PATHS)

kensho_packet_process.o : ./kensho_packet_process.cc ./kensho_packet_process.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_packet_process.cc $(INCLUDE_PATHS)
	
kensho_sentence.o : ./kensho_sentence.cc ./kensho_sentence.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_sentence.cc $(INCLUDE_PATHS)

kensho_result.o : ./kensho_result.cc ./kensho_result.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_result.cc $(INCLUDE_PATHS)

kensho_db.o : ./kensho_db.cc ./kensho_db.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_db.cc $(INCLUDE_PATHS)
kensho_config.o : ./kensho_config.cc ./kensho_config.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_config.cc $(INCLUDE_PATHS)
	
kensho_proto_buf.o : ./kensho_proto_buf.cc ./kensho_proto_buf.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_proto_buf.cc $(INCLUDE_PATHS)

kensho_basic_infos.o : ./kensho_basic_infos.cc ./kensho_basic_infos.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kensho_basic_infos.cc $(INCLUDE_PATHS)

packet_process.o : ./$(USER_DIR)/net/packet_process.cc ./$(USER_DIR)/net/packet_process.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)/net/packet_process.cc $(INCLUDE_PATHS)
	
proto_buf.o : ./$(USER_DIR)/net/proto_buf.cc ./$(USER_DIR)/net/proto_buf.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)/net/proto_buf.cc $(INCLUDE_PATHS)

back_infos.o : ./$(USER_DIR)/logic/back_infos.cc ./$(USER_DIR)/logic/back_infos.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)/logic/back_infos.cc $(INCLUDE_PATHS)

logic_unit.o : ./$(USER_DIR)/logic/logic_unit.cc ./$(USER_DIR)/logic/logic_unit.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)/logic/logic_unit.cc $(INCLUDE_PATHS)
#data_mysql_engine.o : $(USER_DIR)/storage/data_mysql_engine.cc $(USER_DIR)/storage/data_mysql_engine.h
#	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/storage/data_mysql_engine.cc $(INCLUDE_PATHS)
	
mysql_pool.o : ./$(USER_DIR)/storage/mysql_pool.cc ./$(USER_DIR)/storage/mysql_pool.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)/storage/mysql_pool.cc $(INCLUDE_PATHS)

token.o : ./$(USER_DIR)/tool/token.cc ./$(USER_DIR)/tool/token.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)/tool/token.cc $(INCLUDE_PATHS)
$(PLUGIN) : kensho_config.o base_config.o token.o g_fmt.o radom_in.o dtoa.o   kensho_init.o  kensho_logic.o kensho_factory.o back_infos.o kensho_packet_process.o\
	kensho_proto_buf.o packet_process.o kensho_sentence.o proto_buf.o logic_unit.o kensho_kafka.o\
	kensho_basic_infos.o kensho_result.o kensho_db.o\
	$(CUSTOM_THIRD_PATH)/dmg_fp/lib/dmg_fp.a $(LIB_DIR)/base/lib/mybase.a $(LIB_DIR)/third_party/lib/libhiredis.a $(CUSTOM_THIRD_PATH)/librdkafka/librdkafka.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LINK_PATHS) -lpthread -lexpat -lrt -ldl -lmysqlclient  \
	$^  -lcurl -o $@  -L$(SO_DIR)/../back_share -Wl,-rpath=back_share -lback_share -L$(DEPENDS_DIR)/lib/market_info -Wl,-rpath=$(DEPENDS_RUN_DIR)/lib/market_info -lmarket_info
